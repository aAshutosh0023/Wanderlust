
<% layout('/layouts/boilerplate') -%>

<form id="filterForm" action="/filtered" method="GET">
  <input type="hidden" name="category" id="category" value="">
 <div id="filters">
  
  <div class="filter">
      <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('trending')">
       <div><i class="fa-solid fa-fire"></i></div> 
      </button>   
      <p>Trending</p>
    </div>



  <div class="filter">
      <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('rooms')">
  <div><i class="fa-solid fa-bed"></i> </div> 
      </button>
  <p> Rooms</p>
  </div>

  <div class="filter">
    <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('iconic_cities')">
  <div><i class="fa-solid fa-mountain-city"></i> </div> 
  <p>Iconic Cities</p>
  </div>

  <div class="filter">
    <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('boats')">
  <div><i class="fa-solid fa-ship"></i> </div> 
  <p>Boats</p>
  </div>



  <div class="filter">
    <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('castles')">
  <div><i class="fa-brands fa-fort-awesome"></i> </div> 
  <p>Castles</p>
  </div>

  <div class="filter">
    <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('beach')">
  <div><i class="fa-solid fa-umbrella-beach"></i> </div> 
  <p>Beach</p>
  </div>


  <div class="filter">
    <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('camping')">
  <div><i class="fa-solid fa-campground"></i> </div> 
  <p>Camping</p>
  </div>

  <div class="filter">
    <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('mountains')">
  <div><i class="fa-solid fa-mountain"></i> </div> 
  <p>Mountains</p>
  </div>
  
  <div class="filter">
    <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('farms')">
  <div><i class="fa-solid fa-cow"></i> </div> 
  <p>Farms</p>
  </div>
         

  <div class="filter">
    <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('arctic')">
  <div><i class="fa-solid fa-snowflake"></i> </div> 
  <p>Arctic</p>
  </div>

  <div class="filter">
    <button type="submit" style="border: none; background-color: transparent;" onclick="setcategory('domes')">
  <div><i class="fa-solid fa-igloo"></i></div> 
  <p>Domes</p>
  </div>


    <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
    </div>   
  </div>

 </div>
</form>


 <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
 
  <% for(list of Lists){ %>
    <a class="listing-link" href="/listings/<%=list.id%>">
    <div class="card col listing-card">
     
       <img src="<%=list.image.url%>" class="card-img-top" alt="listing image" style="height:20rem" >
       <div class="card-img-overlay"> </div>
       <div class="card-body">
         <p class="card-text">
         <b><%= list.title %> </b> <br>
           &#8377;<%=list.price.toLocaleString("en-IN")%> /night
           <i class="tax-info"> &nbsp;  +18% GST</i>
         </p>
       </div>
     </div>
    </a>
     <% } %>
    
 </div>
 
  

 

 



      
  
